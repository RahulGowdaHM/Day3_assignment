@{
}
    <div class="container">
        @using (Html.BeginForm())
        {
        <table class="table table-bordered" style="height:auto">
            <tr>
                <td>Product ID</td>
                <td>@Html.TextBox("pid")</td>
                <td>@Html.ValidationMessage("pid")</td>
            </tr>
            <tr>
                <td>Product Name</td>
                <td>@Html.TextBox("pname")</td>
                <td>@Html.ValidationMessage("pname")</td>
            </tr>
            <tr>
                <td>Price</td>
                <td>@Html.TextBox("price", "", new { type = "number" })</td>
                <td>@Html.ValidationMessage("price")</td>
            </tr>
            <tr>
                <td>Stock</td>
                <td>@Html.TextBox("stock", "", new { type = "number" })</td>
                <td>@Html.ValidationMessage("stock")</td>
            </tr>
            <tr>
                <td colspan="3">
                    <input type="submit" value="Add" />
                </td>
            </tr>
        </table>
        }
        </div>